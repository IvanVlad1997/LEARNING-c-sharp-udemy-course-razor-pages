@page
@model AbbyWeb.Pages.Categories.CreateModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="bg-primary pl-3">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">            
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" type="text"/>
        </div>
        <div class="mb-3">
             <label asp-for="Category.DisplayOrder"></label>
            <input type="text" asp-for="Category.DisplayOrder"  name="displayOrder"/>
        </div>
        <button type="submit" class="btn-primary btn" style="width:150px">Create</button>
    </div>
</form>
